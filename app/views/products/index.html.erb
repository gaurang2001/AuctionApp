<p id="notice"><%= notice %></p>

<h1>Products</h1>

  <% @products.each do |product| %>
    <% if Time.now >= product.deadline %>
      Name: <%= product.name %><br>
      User: <%= product.uname %><br>
      Startbid: <%= product.startbid %><br>
      Deadline: <%= product.deadline.strftime("%Y-%m-%d %H:%M:%S") %>  UTC<br>
      Contact: <%= product.contact %><br>
      Price: <%= product.price %><br>
      <% if product.image.thumb.url %><%= image_tag product.image.thumb.url %><% end %><br>
      <%= link_to 'Show', product %><br>
      <%= link_to 'Edit', edit_product_path(product) %><br>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><br>
      
      <% if product.bb == current_user.id %>
        You bid last
      <% else %>
        <%= link_to 'Bid', product, method: :bid %>
      <% end %>

      <hr>   
    <% end %>
  <% end %>
  


<br>

